<Page x:Class="DiplomV3.Pages.CommandPages.AddUserWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PrimaryBackgroundColor}" Title="Добавить Поле">

    <Page.Resources>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Border Padding="20" CornerRadius="10" Background="{DynamicResource SecondaryBackgroundColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Добавить данные" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundColor}" TextAlignment="Center" Margin="0,0,0,10"/>

                <StackPanel x:Name="DynamicFieldsPanel" />

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="✅ Сохранить" Click="BtnSave_Click" Width="100" Height="35" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="❌ Отмена" Click="BtnCancel_Click" Width="80" Height="35" Style="{StaticResource ButtonStyle}" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
