<Page x:Class="DiplomV3.Pages.CommandPages.AddRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PrimaryBackgroundColor}" 
      Title="Добавить запись">

    <Grid Margin="10">
        <Border Padding="15"
                CornerRadius="5"
                Background="{DynamicResource SecondaryBackgroundColor}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Добавить запись"
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryForegroundColor}"
                               TextAlignment="Center" 
                               Margin="0,0,0,10"/>

                    <StackPanel x:Name="DynamicFieldsPanel" Margin="0,10,0,0"/>

                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Margin="0,20,0,0">
                        <Button Content="Сохранить" 
                                Click="BtnSave_Click" 
                                Width="120" 
                                Height="35"
                                Style="{StaticResource GitHubButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Отмена" 
                                Click="BtnCancel_Click" 
                                Width="120" 
                                Height="35"
                                Style="{StaticResource GitHubButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>