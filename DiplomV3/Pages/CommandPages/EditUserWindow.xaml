<Page x:Class="DiplomV3.Pages.CommandPages.EditUserWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PrimaryBackgroundColor}"
      Title="Редактировать пользователя">

    <Grid Margin="20">
        <Border Padding="20"
                CornerRadius="10"
                Background="{DynamicResource SecondaryBackgroundColor}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Редактировать пользователя"
                           FontSize="18" FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryForegroundColor}"
                           TextAlignment="Center" Margin="0,0,0,10"/>

                <!-- Основные поля пользователя -->
                <StackPanel Name="DynamicFieldsPanel" Margin="0,10,0,0"/>

                <!-- Секция доступных таблиц -->
                <TextBlock Text="Доступные таблицы:" Margin="0,20,0,5"
                          FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundColor}"/>

                <ListBox x:Name="TablesListBox" Height="200" Margin="0,5,0,10"
                        SelectionMode="Multiple"
                        Background="{DynamicResource InputBackgroundColor}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding TableName}" 
                                     IsChecked="{Binding IsSelected}"
                                     Margin="2"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="✅ Сохранить" Click="BtnSave_Click" Width="110" Height="35"
                            Style="{StaticResource GitHubButtonStyle}"/>
                    <Button Content="❌ Отмена" Click="BtnCancel_Click" Width="95" Height="35" Margin="10,0,0,0"
                            Style="{StaticResource GitHubButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>